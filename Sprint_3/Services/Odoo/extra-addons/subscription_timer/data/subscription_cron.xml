<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron para verificar expiraciones diariamente -->
        <record id="ir_cron_check_subscription_expiration" model="ir.cron">
            <field name="name">Verificar Expiraci√≥n de Suscripciones</field>
            <field name="model_id" ref="model_subscription_subscription"/>
            <field name="state">code</field>
            <field name="code">model.action_check_expiration()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>