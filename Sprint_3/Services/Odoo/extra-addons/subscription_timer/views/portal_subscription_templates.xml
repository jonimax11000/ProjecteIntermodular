<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Página del portal -->
    <template id="portal_my_subscriptions" name="Mis Suscripciones">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Mis Suscripciones</t>
            </t>
            
            <div class="container mt-3">
                <div class="row">
                    <div class="col-12">
                        <h3>Suscripciones Activas</h3>
                        <t t-if="active_subscriptions">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th>Fecha Inicio</th>
                                        <th>Fecha Fin</th>
                                        <th>Días Restantes</th>
                                        <th class="text-center">Auto-renovar</th>
                                        <th>Progreso</th>
                                        <th class="text-right">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="active_subscriptions" t-as="sub">
                                        <tr>
                                            <td><t t-esc="sub.product_id.name"/></td>
                                            <td><t t-esc="sub.start_date"/></td>
                                            <td><t t-esc="sub.end_date"/></td>
                                            <td>
                                                <span t-attf-class="badge badge-#{sub.days_remaining > 7 and 'success' or sub.days_remaining > 3 and 'warning' or 'danger'} text-dark font-weight-bold">
                                                    <t t-esc="sub.days_remaining"/> días
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <a t-attf-href="/my/subscription/toggle_auto_renew/#{sub.id}" t-attf-class="btn btn-sm btn-#{sub.auto_renew and 'success' or 'secondary'} shadow-sm">
                                                    <i t-attf-class="fa fa-#{sub.auto_renew and 'check-circle' or 'circle-o'}"/>
                                                    <t t-if="sub.auto_renew"> Activado</t>
                                                    <t t-else=""> Desactivado</t>
                                                </a>
                                            </td>
                                            <td>
                                                <div class="progress">
                                                    <div class="progress-bar" role="progressbar" t-attf-style="width: #{sub.progress}%" t-attf-aria-valuenow="#{sub.progress}" aria-valuemin="0" aria-valuemax="100">
                                                        <t t-esc="round(sub.progress, 1)"/>%
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-right">
                                                <a t-attf-href="/my/subscription/cancel/#{sub.id}" class="btn btn-sm btn-danger shadow-sm" onclick="return confirm('¿Estás seguro de que deseas cancelar esta suscripción?')">
                                                    <i class="fa fa-times"/> Cancelar
                                                </a>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                        <t t-else="">
                            <p class="text-muted">No tienes suscripciones activas.</p>
                        </t>
                    </div>
                </div>
                
                <div class="row mt-5">
                    <div class="col-12">
                        <h3>Historial de Suscripciones</h3>
                        <t t-if="expired_subscriptions">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th>Fecha Inicio</th>
                                        <th>Fecha Fin</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="expired_subscriptions" t-as="sub">
                                        <tr class="text-muted">
                                            <td><t t-esc="sub.product_id.name"/></td>
                                            <td><t t-esc="sub.start_date"/></td>
                                            <td><t t-esc="sub.end_date"/></td>
                                            <td>
                                                <span t-if="sub.state == 'expired'" class="badge badge-secondary text-dark font-weight-bold">Expirada</span>
                                                <span t-if="sub.state == 'cancelled'" class="badge badge-danger text-dark font-weight-bold">Cancelada</span>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                        <t t-else="">
                            <p class="text-muted">No tienes suscripciones expiradas.</p>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>