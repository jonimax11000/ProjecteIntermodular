@startuml
skinparam nodesep 10
skinparam ranksep 30
skinparam folderColor #4A90E2
skinparam fileColor #7ED321

folder "public" {
  folder "thumbnails" as thumbnails {
    file "video1.jpg"
    file "video2.jpg"
    file "video3.jpg"
    file "... más .jpg"
  }
  
  folder "videos" as videos {
    folder "video1" as video1 {
      file "index0.ts"
      file "index1.ts"
      file "index2.ts"
      file "... .ts"
      file "indexN.ts"
      file "index.m3u8"
    }
    
    folder "video2" as video2 {
      file "index0.ts"
      file "index1.ts"
      file "... .ts"
      file "indexM.ts"
      file "index.m3u8"
    }
    
    folder "video3" as video3 {
      file "index0.ts"
      file "index1.ts"
      file "... .ts"
      file "indexP.ts"
      file "index.m3u8"
    }
    
    folder "... más videos" as masvideos
  }
}

note right of thumbnails
  <b>Miniaturas</b>
  Una imagen .jpg por video
  Formato: {nombre-video}.jpg
end note

note right of videos
  <b>Videos HLS</b>
  Cada video en su propio
  directorio
  Estructura estándar HLS
end note

note right of video1
  <b>Estructura HLS</b>
  • index0.ts a indexN.ts
    (segmentos de video)
  • index.m3u8 (playlist)
end note

@enduml